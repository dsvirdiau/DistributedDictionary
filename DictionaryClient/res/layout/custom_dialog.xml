<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skypeBlue"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/etPort"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView1"
        android:background="@drawable/background_text"
        android:ems="10"
        android:textSize="25sp"
        android:paddingLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="number"
        >
        
        

    </EditText>

    <EditText
        android:id="@+id/etIP"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/etPort"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:textSize="25sp"
        android:background="@drawable/background_text"
        android:ems="10">
               
         <requestFocus />
         </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etIP"
        android:layout_marginTop="32dp"
        android:layout_toLeftOf="@+id/etPort"
        android:text="Enter Port No "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/White"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="34dp"
        android:text="Enter IP Address "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/White"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btnDialog"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/etPort"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background"
        android:text="OK"
        android:textColor="@color/White"
        android:textSize="25sp" />

</RelativeLayout>
